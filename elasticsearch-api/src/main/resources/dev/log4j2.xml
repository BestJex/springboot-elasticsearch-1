<?xml version="1.0" encoding="UTF-8"?> 
<configuration> 
	<appenders> 
		<Console name="Console" target="SYSTEM_OUT"> 
			<!--控制台只输出level及以上级别的信息（onMatch），其他的直接拒绝（onMismatch）-->
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %c %M - %msg%n"/>  
			<!-- <PatternLayout pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/> -->
		</Console> 
		
		<!-- elasticsearch.api info级别的 -->
        <RollingFile name="elasticsearch.api-info" fileName="logs/elasticsearch.api-info.log"
                     filePattern="logs/elasticsearch.api-info.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="info" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>
        
        <!-- elasticsearch.api error级别的 -->
        <RollingFile name="elasticsearch.api-error" fileName="logs/elasticsearch.api-error.log"
                     filePattern="logs/elasticsearch.api-error.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="error" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>
        
        <!-- elasticsearch.api warn级别的 -->
        <RollingFile name="elasticsearch.api-warn" fileName="logs/elasticsearch.api-warn.log"
                     filePattern="logs/elasticsearch.api-warn.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="warn" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>
        
        <!-- rpc debug级别的 -->
        <RollingFile name="elasticsearch.api-debug" fileName="logs/elasticsearch.api-debug.log"
                     filePattern="logs/elasticsearch.api-debug.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="debug" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>
	</appenders> 
	
	<loggers>
		<root level="INFO"> 
			<appender-ref ref="Console"/> 
		</root> 
		<!-- 框架运行中涉及到的日志 -->
        <logger name="com.elasticsearch" additivity="true">
            <appender-ref ref="elasticsearch.api-info"/>
            <appender-ref ref="elasticsearch.api-error"/>
            <appender-ref ref="elasticsearch.api-debug"/>
            <appender-ref ref="elasticsearch.api-warn"/>
        </logger>
	</loggers> 

</configuration>


